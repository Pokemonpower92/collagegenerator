FROM golang:1.23

WORKDIR /app

# Install air for hot reloading
RUN go install github.com/air-verse/air@latest

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source
COPY . .
RUN mkdir resources

# Default command (can be overridden in docker-compose)
CMD ["air", "-c", ".air.toml"]